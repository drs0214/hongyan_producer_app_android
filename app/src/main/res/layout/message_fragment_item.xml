<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroud"
    android:orientation="vertical"
    android:paddingTop="15dp">

    <TextView
        android:id="@+id/textview_message_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_round_message_date"
        android:paddingBottom="4dp"
        android:paddingLeft="6dp"
        android:paddingRight="4dp"
        android:paddingTop="2dp"
        android:text="今天 14:35"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_round_message"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/textview_message_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重要活动提示"
            android:textColor="@color/list_item_text_color_title"
            android:textSize="@dimen/list_item_text_size_title" />

        <TextView
            android:id="@+id/textview_message_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin_half_half"
            android:text="小型货车小型货车小型货车小型货车小型货车小型货车小型货车"
            android:textColor="@color/list_item_text_color_main"
            android:textSize="@dimen/list_item_text_size_main" />
    </LinearLayout>
</LinearLayout>