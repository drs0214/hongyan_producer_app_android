<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/ll_check_lockcar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin20"
                android:layout_marginTop="@dimen/margin10"
                android:text="锁车检测"
                android:textColor="@color/list_item_text_color_title"
                android:textSize="@dimen/text_size_15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin20"
                android:layout_marginRight="@dimen/margin20"
                android:layout_marginTop="@dimen/margin5"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_lock_open"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/start_normal" />

                    <Button
                        android:id="@+id/btn_lock_open"
                        android:layout_width="@dimen/startcheck_btn_width"
                        android:layout_height="@dimen/startcheck_btn_height"
                        android:text="开启"
                        android:textSize="@dimen/text_size_14"
                        android:background="@drawable/check_start_lock_btn_selector"
                        android:textColor="@color/startcheck_lock_color_selector"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_lock_close"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/close_normal" />

                    <Button
                        android:id="@+id/btn_lock_close"
                        android:layout_width="@dimen/startcheck_btn_width"
                        android:layout_height="@dimen/startcheck_btn_height"
                        android:text="关闭"
                        android:textColor="@color/startcheck_lock_color_selector"
                        android:textSize="@dimen/text_size_14"
                        android:background="@drawable/check_start_lock_btn_selector"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_lock_lockcar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/lock_normal" />

                    <Button
                        android:id="@+id/btn_lock_lockcar"
                        android:layout_width="@dimen/startcheck_btn_width"
                        android:layout_height="@dimen/startcheck_btn_height"
                        android:text="锁车"
                        android:textSize="@dimen/text_size_14"
                        android:textColor="@color/startcheck_lock_color_selector"
                        android:background="@drawable/check_start_lock_btn_selector"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_lock_unlockcar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/unlock_normal" />

                    <Button
                        android:id="@+id/btn_lock_unlockcar"
                        android:layout_width="@dimen/startcheck_btn_width"
                        android:layout_height="@dimen/startcheck_btn_height"
                        android:text="解锁"
                        android:textColor="@color/startcheck_lock_color_selector"
                        android:textSize="@dimen/text_size_14"
                        android:background="@drawable/check_start_lock_btn_selector"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin20"
            android:layout_marginTop="@dimen/margin20"
            android:text="开关量检测"
            android:textColor="@color/list_item_text_color_title"
            android:textSize="@dimen/text_size_15" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin20"
            android:layout_marginRight="@dimen/margin20"
            android:layout_marginTop="@dimen/margin5"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_switch_brake"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/brake_normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin5"
                    android:text="制动"
                    android:textColor="@color/main_text_color"
                    android:textSize="@dimen/text_size_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_switch_cardoor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cardoor_normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin5"
                    android:text="车门"
                    android:textColor="@color/main_text_color"
                    android:textSize="@dimen/text_size_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_switch_leftlight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/left_turn_light_normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin5"
                    android:text="左转灯"
                    android:textColor="@color/main_text_color"
                    android:textSize="@dimen/text_size_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_switch_rightlight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/right_turn_normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin5"
                    android:text="右转灯"
                    android:textColor="@color/main_text_color"
                    android:textSize="@dimen/text_size_14" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ProgressBar
                android:id="@+id/pb_checking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:indeterminateTint="@color/colorPrimary"
                android:layout_marginTop="@dimen/margin20"
                />
            <ImageView
                android:id="@+id/img_result"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/check_startcheck"
                android:layout_marginTop="@dimen/margin20"
                android:src="@drawable/first_checkfail"
                android:layout_centerInParent="true"
                android:visibility="gone"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin10"
            android:gravity="center"
            android:text="检查中..."
            android:textColor="@color/text_blue"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin10"
        android:layout_marginLeft="@dimen/margin20"
        android:layout_marginRight="@dimen/margin20"
        android:layout_alignParentBottom="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_break_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/margin10"
                >

                <Button
                    android:id="@+id/btn_backscan"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/margin44"
                    android:layout_weight="1"
                    android:background="@drawable/selector_btn_enable"
                    android:gravity="center"
                    android:text="返回扫描页面"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_14"
                    android:enabled="false"
                    />

                <Button
                    android:id="@+id/btn_finishcheck"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/margin44"
                    android:layout_marginLeft="@dimen/margin15"
                    android:layout_weight="1"
                    android:background="@drawable/selector_btn_enable"
                    android:gravity="center"
                    android:text="结束复检"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_14" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_forcepass"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin44"
                android:layout_below="@+id/ll_break_result"
                android:background="@drawable/selector_btn_enable"
                android:gravity="center"
                android:text="强制通过"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14"
                android:visibility="gone"
                />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
