<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_shape_5"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin12"
    android:paddingTop="@dimen/margin12">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin12"
            android:text="车辆内部编号:"
            android:textColor="@color/text_tj"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin12"
            android:gravity="right"
            android:text="0665659"
            android:textColor="@color/desc_text_color"
            android:textSize="@dimen/text_size_14" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin12"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin12"
            android:text="底盘号:"
            android:textColor="@color/text_tj"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/tv_chassisnumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin12"
            android:gravity="right"
            android:text="HD154848"
            android:textColor="@color/desc_text_color"
            android:textSize="@dimen/text_size_14" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin12"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin12"
            android:text="操作人:"
            android:textColor="@color/text_tj"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin12"
            android:gravity="right"
            android:text="张三"
            android:textColor="@color/desc_text_color"
            android:textSize="@dimen/text_size_14" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin12"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin12"
            android:text="操作时间:"
            android:textColor="@color/text_tj"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/tv_operationtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin12"
            android:gravity="right"
            android:text="2018-1-25 10:30"
            android:textColor="@color/desc_text_color"
            android:textSize="@dimen/text_size_14" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin12"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin12"
            android:text="操作类型:"
            android:textColor="@color/text_tj"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/tv_operationtype"
            android:layout_width="296dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin12"
            android:gravity="right"
            android:text="下线"
            android:textColor="@color/desc_text_color"
            android:textSize="@dimen/text_size_14" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin12"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin12"
            android:text="操作人所属部门:"
            android:textColor="@color/text_tj"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/tv_department"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin12"
            android:gravity="right"
            android:text="车联网部"
            android:textColor="@color/desc_text_color"
            android:textSize="@dimen/text_size_14" />

    </LinearLayout>
</LinearLayout>
