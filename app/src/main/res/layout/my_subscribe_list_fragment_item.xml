<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row_userinfo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/list_item_vertical_margin"
    android:paddingTop="@dimen/list_item_vertical_margin">


    <LinearLayout
        android:id="@+id/ll_carNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/textview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="äº¬A88888"
            android:textColor="@color/important_text_color"
            android:textSize="@dimen/title_textsize" />

    </LinearLayout>

    <ImageView
        android:id="@+id/textview_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="8dp"
        android:src="@drawable/more"
        android:textColor="#333333"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_carNum"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@id/textview_more"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/desc_text_color"
            android:textSize="@dimen/content_textsize" />
        <TextView
            android:id="@+id/tv_wocode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/desc_text_color"
            android:textSize="@dimen/content_textsize" />

        <RelativeLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textview_desc2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:text="[yyyyy]"
                android:textColor="@color/desc_text_color"
                android:textSize="@dimen/content_textsize" />

            <TextView
                android:id="@+id/textview_desc1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@id/textview_desc2"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="[xxxxxx]"
                android:textColor="@color/desc_text_color"
                android:textSize="@dimen/content_textsize" />

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>

