<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/titlebar_view" />

    <TextView
        android:id="@+id/tv_number_alert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="已发送短信验证码到"
        android:textColor="@color/important_text_color"
        android:textSize="@dimen/login_textsize" />

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:text=""
        android:textColor="@color/important_text_color"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_tab_height"
        android:layout_marginTop="30dp"
        android:background="#ffffff">

        <TextView
            android:id="@+id/tv_yzm"
            android:layout_width="@dimen/login_textview_width"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="验证码"
            android:textColor="@color/important_text_color"
            android:textSize="@dimen/login_textsize" />


        <TextView
            android:id="@+id/tv_yzm_get"
            android:layout_width="100dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/titlebar_paddingRight"
            android:background="@drawable/shape_yzm_botton"
            android:gravity="center"
            android:paddingRight="@dimen/titlebar_paddingRight"
            android:text="获取验证码"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/login_textsize" />


        <EditText
            android:id="@+id/et_yzm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/tv_yzm_get"
            android:layout_toRightOf="@+id/tv_yzm"
            android:background="@null"
            android:hint="请输入验证码"
            android:inputType="numberDecimal"
            android:maxLength="6"
            android:textColorHint="@color/hint_text_color"
            android:textSize="@dimen/login_textsize" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorSplitLine" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="15dp"
        android:background="@drawable/selector_login_button"
        android:text="下一步"
        android:textColor="#ffffff"
        android:textSize="@dimen/login_textsize" />
</LinearLayout>