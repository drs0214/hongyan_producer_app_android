<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin45"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin20"
            android:text="车辆内部编号："
            android:textColor="@color/list_item_text_color_title"
            android:textSize="@dimen/text_size_15" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginRight="@dimen/margin20"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请扫描编号"
                android:singleLine="true"
                android:maxLines="1"
                android:background="@null"
                android:textColorHint="@color/list_item_text_color_title"
                android:textColor="@color/list_item_text_color_title"
                android:textSize="@dimen/text_size_15" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line"
                android:background="@color/line" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin12"
        android:layout_marginLeft="@dimen/margin20"
        android:layout_marginRight="@dimen/margin20"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="扫描结果"
            android:textColor="@color/text_tj"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/tv_chassisnumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:visibility="gone"
            android:text="1/1"
            android:textColor="@color/desc_text_color"
            android:textSize="@dimen/text_size_14" />

    </LinearLayout>
    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin15"
        android:layout_marginLeft="@dimen/margin20"
        android:layout_marginRight="@dimen/margin20"
        android:dividerHeight="@dimen/margin10"
        android:divider="@color/main_bg"
        android:scrollbars="none"
        android:paddingBottom="@dimen/margin20"
        android:layout_height="match_parent">

    </ListView>
</LinearLayout>
