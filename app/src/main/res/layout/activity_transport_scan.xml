<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.aerozhonghuan.hongyan.producer.widget.TitleBarView
        android:id="@+id/titlebarview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin45"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_single_scan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_single_scan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="单辆扫描"
                    android:textColor="@color/chujian_blue"
                    android:textSize="@dimen/text_size_15" />

                <View
                    android:id="@+id/view_single"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin2"
                    android:layout_alignParentBottom="true"
                    android:background="@color/chujian_blue"></View>
            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_many_scan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_many_scan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="批量扫描"
                    android:textColor="@color/text_tj"
                    android:textSize="@dimen/text_size_15" />

                <View
                    android:id="@+id/view_many"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin2"
                    android:layout_alignParentBottom="true"
                    android:background="@color/white"></View>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"></View>

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>
</LinearLayout>
