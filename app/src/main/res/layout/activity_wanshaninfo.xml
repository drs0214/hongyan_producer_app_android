<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroud"
    android:orientation="vertical">
    <include layout="@layout/titlebar_view" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_tab_height"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="@dimen/titlebar_paddingLeft"
            android:paddingRight="@dimen/titlebar_paddingRight"
            android:text="姓    名"
            android:textColor="@color/important_text_color"
            android:textSize="@dimen/login_textsize" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入真实姓名"
            android:maxLength="14"
            android:textColorHint="@color/hint_text_color"
            android:textSize="@dimen/login_textsize" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E6E6E6" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_tab_height"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_pwd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="@dimen/titlebar_paddingLeft"
            android:paddingRight="@dimen/titlebar_paddingRight"
            android:text="密    码"
            android:textColor="@color/important_text_color"
            android:textSize="@dimen/login_textsize" />

        <ImageView
            android:id="@+id/iv_pwd_eye"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingLeft="6dp"
            android:paddingRight="15dp"
            android:src="@drawable/icon_closeeye" />

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/tv_pwd"
            android:layout_toLeftOf="@id/iv_pwd_eye"
            android:background="@null"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:textColorHint="@color/hint_text_color"
            android:textSize="@dimen/login_textsize" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorSplitLine" />


    <Button
        android:id="@+id/bt_ok"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@drawable/selector_login_button"
        android:text="确定"
        android:textColor="#ffffff"
        android:textSize="@dimen/login_textsize" />


</LinearLayout>