<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <com.aerozhonghuan.hongyan.producer.widget.TitleBarView
        android:id="@+id/titlebarview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin55"
        android:gravity="center"
        android:text="产销版账号登录"
        android:textColor="@color/list_item_text_color_title"
        android:textSize="@dimen/text_size_18" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin92"
        android:layout_marginTop="@dimen/margin30"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding20"
        android:paddingRight="@dimen/padding20">

        <EditText
            android:id="@+id/et_account"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin45"
            android:background="@null"
            android:hint="手机号/用户名"
            android:textColorHint="@color/hint_text_color1"
            android:textSize="@dimen/login_textsize" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:background="@color/line" />

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin45"
            android:background="@null"
            android:hint="登录密码"
            android:textColorHint="@color/hint_text_color1"
            android:textSize="@dimen/login_textsize" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:background="@color/line" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin44"
        android:layout_marginLeft="@dimen/margin20"
        android:layout_marginRight="@dimen/margin20"
        android:layout_marginTop="@dimen/margin45"
        android:background="@drawable/btn_blue_shape"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin25"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前版本："
            android:textColor="@color/list_item_text_color_title"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="V2.2"
            android:textColor="@color/list_item_text_color_title"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>
</LinearLayout>