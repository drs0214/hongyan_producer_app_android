<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroud"
    android:orientation="vertical">

    <include layout="@layout/titlebar_view" />

    <RelativeLayout
        android:id="@+id/rl_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="@dimen/fab_margin"
            android:paddingRight="@dimen/titlebar_paddingRight"
            android:text="头像"
            android:textColor="@color/important_text_color"
            android:textSize="@dimen/login_textsize" />

        <ImageView
            android:id="@+id/iv_photo_r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/titlebar_paddingRight"
            android:src="@drawable/more" />

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="@dimen/mine_pic_wh"
            android:layout_height="@dimen/mine_pic_wh"
            android:layout_toLeftOf="@+id/iv_photo_r"
            android:padding="@dimen/titlebar_paddingLeft"
            android:src="@mipmap/ic_default_user" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorSplitLine" />

    <RelativeLayout
        android:id="@+id/rl_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_tab_height"
        android:background="#ffffff">

        <TextView
            android:id="@+id/tv_name1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="@dimen/fab_margin"
            android:paddingRight="@dimen/titlebar_paddingRight"
            android:text="姓名"
            android:textColor="@color/important_text_color"
            android:textSize="@dimen/login_textsize" />

        <ImageView
            android:id="@+id/iv_name_r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/titlebar_paddingRight"
            android:src="@drawable/more" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/iv_name_r"
            android:layout_toRightOf="@+id/tv_name1"
            android:gravity="center_vertical|right"
            android:paddingRight="@dimen/titlebar_paddingRight"
            android:text=""
            android:textSize="@dimen/login_textsize" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorSplitLine" />

    <RelativeLayout
        android:id="@+id/rl_jifendetail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_tab_height"
        android:background="#ffffff">

        <TextView
            android:id="@+id/tv_jifendetail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="@dimen/fab_margin"
            android:paddingRight="@dimen/titlebar_paddingRight"
            android:text="积分明细"
            android:textColor="@color/important_text_color"
            android:textSize="@dimen/login_textsize" />

        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/titlebar_paddingRight"
            android:src="@drawable/more" />

        <TextView
            android:id="@+id/tv_score"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/iv_more"
            android:layout_toRightOf="@+id/tv_jifendetail"
            android:gravity="center_vertical|right"
            android:paddingRight="@dimen/titlebar_paddingRight"
            android:textSize="@dimen/login_textsize" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorSplitLine"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl_point"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_tab_height"
        android:background="#ffffff"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_point1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="@dimen/titlebar_paddingLeft"
            android:paddingRight="@dimen/titlebar_paddingRight"
            android:text="积分"
            android:textColor="@color/important_text_color"
            android:textSize="@dimen/login_textsize" />

        <ImageView
            android:id="@+id/iv_point_r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/titlebar_paddingRight" />

        <TextView
            android:id="@+id/tv_point"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/iv_point_r"
            android:layout_toRightOf="@+id/tv_point1"
            android:gravity="center_vertical|right"
            android:paddingRight="@dimen/titlebar_paddingRight"
            android:text="2002"
            android:textSize="@dimen/login_textsize" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorSplitLine" />

    <RelativeLayout
        android:id="@+id/rl_pwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_tab_height"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="#ffffff">

        <TextView
            android:id="@+id/tv_pwd1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="@dimen/fab_margin"
            android:paddingRight="@dimen/titlebar_paddingRight"
            android:text="修改密码"
            android:textColor="@color/important_text_color"
            android:textSize="@dimen/login_textsize" />

        <ImageView
            android:id="@+id/iv_pwd_r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/titlebar_paddingRight"
            android:src="@drawable/more" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorSplitLine" />

    <RelativeLayout
        android:id="@+id/rl_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_tab_height"
        android:background="#ffffff">

        <TextView
            android:id="@+id/tv_phone1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="@dimen/fab_margin"
            android:paddingRight="@dimen/titlebar_paddingRight"
            android:text="手机绑定"
            android:textColor="@color/important_text_color"
            android:textSize="@dimen/login_textsize" />


        <ImageView
            android:id="@+id/iv_phone_r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/titlebar_paddingRight"
            android:src="@drawable/more" />

        <TextView
            android:id="@+id/tv_alter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/iv_phone_r"
            android:autoLink="all"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/titlebar_paddingLeft"
            android:paddingRight="@dimen/titlebar_paddingRight"
            android:text="更换"
            android:textColor="@color/titlebar_bg"
            android:textSize="@dimen/login_textsize" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/tv_alter"
            android:layout_toRightOf="@+id/tv_phone1"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/titlebar_paddingRight"
            android:text=""
            android:textSize="@dimen/login_textsize" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorSplitLine" />

    <Button
        android:id="@+id/btn_quit"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector_login_button"
        android:text="退出账户"
        android:textColor="#ffffff"
        android:textSize="@dimen/login_textsize" />
</LinearLayout>